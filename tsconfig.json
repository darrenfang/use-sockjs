{
    "compilerOptions": {
      "alwaysStrict": true,
      "strict": true,
      "module": "commonjs",
      "target": "es5",
      "outDir": "./dist",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "jsx": "react",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "lib",
      "node_modules"
    ]
  }
